<div class="idea_card m-2 col-12 col-md-4 rounded" style="width:35rem">
	<div class="idea_card_header row p-3 border border-secondary rounded-top border-3 bg-light">
		<div class="col-9">
			<p class="fw-bold">{{ idea.author.lastname }}
				{{ idea.author.firstname }}</p>
			<p>{{ idea.author.profession }}</p>
		</div>
		<div class="user_picture col-3">
			{% if idea.author.profilePicture %}			
				<img class="card-img-top img-thumbnail img-fluid mx-auto d-block rounded" src="{{ vich_uploader_asset(idea.author) }}" alt="{{ idea.author.firstname }}">
			{% else %}
				<img class="card-img-top img-thumbnail img-fluid mx-auto d-block rounded" src="{{ asset('/build/images/astroSalesforce.png') }}" alt="astro salesforce">
			{% endif %}
		</div>
	</div>
	<div class="p-2 border border-info  border-5 bg-info">
		<div class="p-2 border border-secondary rounded border-5 bg-secondary text-break">
			<h3>{{ idea.title }}:</h3>
			<p>{{ idea.content }}</p>
		</div>
	</div>
	<div class="p-3 border border-info rounded-bottom border-4 bg-info d-grid gap-2 d-md-flex justify-content-md-between align-items-center">
		<a href="{{ path('app_idea_index') }}" class="btn btn-success">back to list</a>
		{% if app.user and idea.isLikedByUser(app.user) %}
			<a href="{{ path('app_idea_likeShow', {'id': idea.id}) }}" class="btn btn-success">Like -
				{{ idea.likes | length }}</a>
		{% else %}
			<a href="{{ path('app_idea_likeShow', {'id': idea.id}) }}" class="btn btn-secondary">Like -
				{{ idea.likes | length }}</a>
		{% endif %}
	</div>
</div>
