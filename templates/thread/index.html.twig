{% extends 'base.html.twig' %}

{% block title %}Hello ThreadController!
{% endblock %}

{% block body %}

	<h1 class="text-center">Thread</h1>

	<div class=" mx-5 rounded-5 ">
		{% for key, comment in comments %}
			<div class="border rounded-5 border-secondary border-3 my-5 bg-light pt-2">
				<div class=' d-flex justify-content-between'>
					<a data-bs-toggle="collapse" href="#idea_{{loop.index}}" role="button" aria-expanded="false" aria-controls="idea_{{loop.index}}">
						<h3 class="text-center ps-5">{{comment.idea.title}}</h3>
					</a>
					<a href="{{path('app_idea_show',{'id':comment.idea.id})}}" class="btn btn-success me-5 mb-2">Comment</a>
				</div>

				<div class="collapse" id="idea_{{loop.index}}">
					{% for comment1 in comment.idea.comments %}

						<div class="d-flex  {{ key is even ? 'justify-content-end' : 'justify-content-start' }} ">

							<div class="border bg-secondary border-dark w-50  p-2 m-3 rounded-5 ">

								<div class="user_picture2  border-dark mx-3 mw-25 d-flex ">

									{% if comment1.author.profilePicture %}
										<img class="card-img-top img-thumbnail img-fluid mx-auto d-block rounded" src="{{ vich_uploader_asset(comment1.author) }}" alt="{{ comment1.author.firstname }}">
									{% else %}
										<img class="card-img-top img-thumbnail img-fluid mx-auto d-block rounded" src="{{ asset('/build/images/astroSalesforce.png') }}" alt="astro salesforce">
									{% endif %}
									<div class="d-flex px-3">
										{{comment1.author.firstname}}
										{{comment1.author.lastname}}
									</div>
								</div>
								<div class="m-3 ">

									<p>{{comment1.content}}</p>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
