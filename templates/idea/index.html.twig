{% extends 'base.html.twig' %}

{% block title %}Idea index{% endblock %}

{% block body %}
    <h1>Idea index</h1>

    
        {% for idea in ideas %}
            <tr>
                <div class="idea_card m-5" style="width: 30rem;">
				<div class="idea_card_header row p-3 border border-secondary rounded-top border-3 bg-secondary">
					<div class="p-3 col-8">
						<p class="">Lastname:</p>
						<p class="">Firstname:</p>
						<p class="">Profession:</p>
					</div>
					<div class="user_picture col-4 border border-info rounded border-3">
						<img class="card-img-top img-fluid mx-auto d-block" src="https://th.bing.com/th/id/OIP.PEyJEq2LadECSuY05CbMOgHaLJ?w=198&h=298&c=7&r=0&o=5&pid=1.7" alt="Card image cap">
					</div>
				</div>
				<div class="card-body p-2 border border-info  border-5 bg-info">
					<div class="p-3 card-body border border-secondary rounded border-5 bg-secondary">
						<h2>{{ idea.title }}
							:</h2>
						<p class="card-text">{{ idea.content }}</p>
					</div>
				</div>
				<div class="p-3 border border-info rounded-bottom border-4 bg-info d-grid gap-5 d-md-flex justify-content-md-center">
					<button type="button" class="btn btn-success">Comment</button>
					<button type="button" class="btn btn-success">Like</button>
				</div>
			</div>
                    <a href="{{ path('app_idea_show', {'id': idea.id}) }}">show</a>
                    <a href="{{ path('app_idea_edit', {'id': idea.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        

    <a href="{{ path('app_idea_new') }}">Create new</a>


   
{% endblock %}


