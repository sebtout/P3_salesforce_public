{% extends 'base.html.twig' %}

{% block title %}Idea index
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-6 col-md-2 mt-3 text-center">
			<div>
				{{ form_start(form) }}
				{{ form_widget(form) }}
				{{ form_end(form) }}
				<button type="button" class="btn btn-success">
					<a href="{{ path('app_idea_new') }}">Create new idea</a>
				</button>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row d-flex justify-content-around">
			{% for idea in ideas %}
				{% if idea.status == 'in progress' %}
					{% include "Shared/_ideaCard.html.twig" %}
				{% endif %}
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}

		</div>
	</div>
	<button id="btnTop">Back top</button>
{% endblock %}
