{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row mx-5">
			<div class="mt-3 mx-5">
				<div class="align-middle mx-5">
					{% for flash_error in app.flashes('reset_password_error') %}
						<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
					{% endfor %}
					<h1 class="text-center m-5">Reset your password</h1>
					<form class="form-idea form bg-lightgrey p-3 shadow bg-light" method="post" action="#anchor">
						{{ form_start(requestForm) }}
						<div class="mx-auto text-center">
							{{ form_row(requestForm.email) }}
							<div class="text-center">
								<small>
									Enter your email address and we will send you a link to reset your password.
								</small>
							</div>
						</div>
						<div class="text-center mt-3">
							{{ form_row(requestForm.submit) }}
						</div>
						{{ form_end(requestForm) }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
