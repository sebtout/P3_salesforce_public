{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row mx-5">
			<div class="mt-3 mx-5">
				<div class="align-middle mx-5">
					<h1 class="text-center m-5">Reset your password</h1>

					<form class="form-idea form bg-lightgrey p-3 shadow bg-light" method="post" action="#anchor">
						{{ form_start(resetForm) }}
						{{ form_row(resetForm.plainPassword) }}
						<div class="text-center mt-4">
							{{ form_row(resetForm.submit) }}
						</div>
						{{ form_end(resetForm) }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
